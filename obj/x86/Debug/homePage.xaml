<Page
    x:Class="BeautyFace.homePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BeautyFace"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="bottomTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="bottomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Bisque"/>
        </Style>
        <Style x:Key="beautyToolImage" TargetType="Image">
            <Setter Property="Margin" Value="5,0,5,0"/>
        </Style>
        <Style x:Key="beautyToolText" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="Bisque">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <canvas:CanvasControl x:ConnectionId='7' x:Name="myCanvas"
                                      Grid.Column="0"
                                                          
                                      Width="200"
                                      Height="200"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                <ProgressRing x:ConnectionId='8' 
                    Grid.Row="0" 
                    Name="WaitLoading" 
                    IsActive="False"
                    Width="80"
                    Height="80"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                </ProgressRing>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" 
                           Grid.Column="0"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="27"
                           Text="&#xE722;"
                           Margin="0,0,0,10"/>
                   
                    <TextBlock Grid.Row="1" 
                           Grid.Column="0"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="27"
                           Text="&#xE8B8;"
                           Margin="0,0,0,10"/>
                    <ScrollViewer VerticalScrollBarVisibility="Visible"
                              VerticalScrollMode="Enabled"
                              Grid.Row="3"
                           Grid.ColumnSpan="2">
                        <TextBlock x:ConnectionId='9'
                           Name="test"
                           Text="ok"
                           HorizontalAlignment="Stretch"
                           TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Grid>
            </Grid>
            <StackPanel Grid.Row="1">
                <Rectangle HorizontalAlignment="Stretch"
                           Height="5"
                           Fill="Cyan"/>
                <Pivot x:ConnectionId='5' Margin="5,-40,5,0" 
                       Name="ManipulatePanel" 
                       >
                    <PivotItem Margin="0">
                        <PivotItem.Content>
                            <StackPanel HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="亮度"
                                           FontSize="20"
                                           Foreground="Brown"/>
                                    <Slider x:ConnectionId='6' Margin="10,0,0,0"
                                            Name="Lumi"
                                            Width="100"
                                            Minimum="0"
                                            Maximum="100"
                                                                            />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="锐化"
                                               FontSize="20"
                                               Foreground="Brown"/>
                                    <Slider Margin="10,0,0,0"
                                            Width="100"
                                            Minimum="0"
                                            Maximum="100"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="模糊"
                                               FontSize="20"
                                               Foreground="Brown"/>
                                    <Slider Margin="10,0,0,0"
                                            Width="100"
                                            Minimum="0"
                                            Maximum="100"/>

                                </StackPanel>
                            </StackPanel>
                        </PivotItem.Content>
                    </PivotItem>
                </Pivot>
            </StackPanel>
            <!--最底部面板-->
            <StackPanel Grid.Row="2" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
                <RelativePanel x:ConnectionId='1' Name="Tab1"
                           Margin="0,0,10,0" 
                                              >
                    <TextBlock Text="调整"
                           FontSize="30"
                           Foreground="DarkOrange"
                           Margin="0,0,0,10"
                           RelativePanel.AlignVerticalCenterWithPanel="True"/>
                    <Rectangle RelativePanel.AlignBottomWithPanel="True" 
                               RelativePanel.AlignLeftWithPanel="True" 
                               RelativePanel.AlignRightWithPanel="True" 
                               Height="4"
                               Fill="DarkOrange"/>
                </RelativePanel>
                <RelativePanel x:ConnectionId='2' Margin="0,0,10,0"
                           Name="Tab2"
                           >
                    <TextBlock Text="滤镜"
                           Margin="0,0,0,10"
                           FontSize="30"
                           Foreground="Gray"
                           RelativePanel.AlignVerticalCenterWithPanel="True"/>
                    <Rectangle RelativePanel.AlignBottomWithPanel="True" 
                               RelativePanel.AlignLeftWithPanel="True" 
                               RelativePanel.AlignRightWithPanel="True" 
                               Height="4"
                               Fill="Gray"/>
                </RelativePanel>
                <RelativePanel x:ConnectionId='3' Margin="0,0,10,0"
                           Name="Tab3"
                          >
                    <TextBlock Text="美颜"
                           Foreground="Gray"
                           FontSize="30"
                           RelativePanel.AlignVerticalCenterWithPanel="True"
                           Margin="0,0,0,10"/>
                    <Rectangle RelativePanel.AlignBottomWithPanel="True" 
                               RelativePanel.AlignLeftWithPanel="True" 
                               RelativePanel.AlignRightWithPanel="True" 
                               Height="4"
                               Fill="Gray"/>
                </RelativePanel>
                <RelativePanel x:ConnectionId='4' Margin="0,0,10,0"
                           Name="Tab4"
                           >
                    <TextBlock Text="贴纸"
                           Foreground="Gray"
                           FontSize="30"
                           RelativePanel.AlignVerticalCenterWithPanel="True"
                           Margin="0,0,0,10"/>
                    <Rectangle RelativePanel.AlignBottomWithPanel="True" 
                           RelativePanel.AlignLeftWithPanel="True" 
                           RelativePanel.AlignRightWithPanel="True" 
                           Height="4"
                           Fill="Gray"/>
                </RelativePanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

